        "babel-loader": "^8.2.2",
        "bootstrap": "^4.6.0",
        "bootstrap-vue": "^2.21.2",
        "font-awesome": "^4.7.0",
        "jest": "^26.6.3",
        "jquery": "^3.5.1",
        "laravel-echo": "^1.11.0",
        "laravel-mix": "^6.0.20",
        "lodash": "^4.17.21",
